{
	"name": "promela",
	"displayName": "Promela",
	"version": "0.3.1",
	"publisher": "dsvictor94",
	"engines": {
		"vscode": "^1.48.0"
	},
	"license": "MIT",
	"description": "Syntax highlighting for Promela and Spin Simulation on debugger",
	"categories": [
		"Programming Languages",
		"Debuggers"
	],
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/dsvictor94/vscode-promela.git"
	},
	"bugs": {
		"url": "https://github.com/dsvictor94/vscode-promela/issues"
	},
	"icon": "images/promela-logo.png",
	"dependencies": {
		"buffer-split": "^1.0.0",
		"rimraf": "^3.0.2",
		"vscode-debugadapter": "^1.41.1",
		"vscode-debugprotocol": "^1.41.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.0.27",
		"@types/rimraf": "^3.0.0",
		"@types/vscode": "^1.49.0",
		"mocha": "^8.1.3",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"typescript": "^3.8.3",
		"vsce": "^1.79.5",
		"vscode-debugadapter-testsupport": "^1.41.0"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"lint": "eslint src --ext ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onLanguage:promela",
		"onDebug"
	],
	"contributes": {
		"languages": [
			{
				"id": "promela",
				"extensions": [
					".pml",
					".promela"
				],
				"aliases": [
					"Promela"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "promela",
				"path": "./syntaxes/promela.tmLanguage",
				"scopeName": "source.promela"
			}
		],
		"breakpoints": [
			{
				"language": "promela"
			}
		],
		"debuggers": [
			{
				"type": "promela-debug",
				"label": "Promela Debug",
				"program": "./out/mockDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a promela model.",
								"default": "${workspaceFolder}/${file}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": false
							},
							"spin": {
								"type": "string",
								"description": "Absolute path to spin.",
								"default": "spin"
							},
							"stepLimit": {
								"type": "number",
								"decription": "Maximun number step a simulation can run until stop.",
								"default": 500
							},
							"seed": {
								"type": "number",
								"decription": "Seed for random nr generator.",
								"default": 123
							},
							"verbose": {
								"type": "boolean",
								"description": "Show spin output on debug output.",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "promela-debug",
						"request": "launch",
						"name": "Simulate Model",
						"program": "${file}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Promela Debug: Simulate",
						"description": "A new configuration for launching a spin simulation",
						"body": {
							"type": "promela-debug",
							"request": "launch",
							"name": "${2:Simulate Model}",
							"program": "^\"\\${workspaceFolder}/${1:model.pml}\""
						}
					}
				]
			}
		],
		"configuration": {
			"title": "Promela",
			"properties": {
				"promela.spin": {
					"type": "string",
					"description": "Absolute path to spin used to debugger and syntax check.",
					"default": "spin"
				}
			}
		}
	}
}
